&HEAD CHID='out_single_particle', TITLE='Particle Trajectory' /

&MESH IJK=30,30,10, XB=-1.,29.,-1.,29.,0.,10. /

&TIME T_END=2.5 /

&SPEC ID='WATER VAPOR' /

&PART ID='DROPLET',
      SPEC_ID='WATER VAPOR',
      DIAMETER=1000,
      SAMPLING_FACTOR=1,
      MONODISPERSE=.TRUE. /

&INIT ID='INJECTOR',
      XYZ=0.0,0.0,0.5,
      UVW=10.,10.,10.,
      PART_ID='DROPLET',
      N_PARTICLES=1 /

&TAIL /
